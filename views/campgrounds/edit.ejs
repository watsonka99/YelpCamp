<%- include("../partials/header") %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%=campground.name%></h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[name]" id="" placeholder="Name" value="<%=campground.name%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[image]" id="" placeholder="image URL" value="<%=campground.image%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[description]" id="" placeholder="description" value="<%=campground.description%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-large btn-default btn-block">Submit</button>         
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>
<%- include("../partials/footer") %>